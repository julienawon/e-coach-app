{% extends "./templates/base.html.twig" %}

{# {% block title %}{{ title }}{% endblock %} #}

{% block body %}
    <section class="bg-home d-flex align-items-center position-relative" style="background: url('assets/images/shape01.png') center;">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="card form-signin p-4 rounded shadow">
                            <form>
                                <a href="index.html"><img src="assets/images/apple-touch-icon.png" class="avatar avatar-small mb-4 d-block mx-auto" alt=""></a>
                                <h5 class="mb-3 text-center">Réinitialiser votre mot de passe</h5>

                                <p class="text-muted">Veuillez saisir votre adresse électronique. Vous recevrez un lien pour créer un nouveau mot de passe par courriel.</p>
                            
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                                    <label for="floatingInput">Adresse e-mail</label>
                                </div>
                
                                <button class="btn w-100" style="background-color: #2aa; color: #fff" type="submit">Envoyez</button>

                                <div class="col-12 text-center mt-3">
                                    <p class="mb-0 mt-3"><small class="text-dark me-2">Vous vous souvenez de votre mot de passe ?</small> <a href="auth-bs-login.html" class="text-dark fw-bold">Se connecter</a></p>
                                </div><!--end col-->

                                <p class="mb-0 text-muted mt-3 text-center">© <script>document.write(new Date().getFullYear())</script> E-coach.</p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}