{% extends "./templates/base.html.twig" %}

{% block title  %} Acceuil - Ecoach {% endblock %}
{% block body %}

    <!-- Hero Start -->
    <section class="bg-half-170 pb-0 bg-light d-table w-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="title-heading text-center mt-4 mt-md-5 pt-md-5">
                        <h1 class="heading mb-3">Améliorez votre bien-être mental avec notre coaching personnalisé.</h1>
                        <p class="para-desc mx-auto text-muted">Découvrez des solutions de coaching.</p>
                        <form class="card rounded p-4 mt-4">
                            <div class="row text-start">
                                <div class="col-lg-10 col-md-9">
                                    <div class="mb-0">
                                        <input type="text" class="form-control" required placeholder="Mots clés"
                                               id="input-Keywords">
                                    </div>
                                </div><!--end col-->
                                <div class="col-lg-2 col-md-3">
                                    <input type="submit" id="search" name="search" class="search btn"
                                           style="background-color:#2AABB0; color: #fff" value="Recherche">
                                </div>
                            </div><!--end row-->
                        </form>
                        <p class="text-muted mb-0 mt-4"><span class="text-dark">Mots clés :</span> Gestion du stress,
                            dépression, traumatismes, Confiance en soi, etc...</p>
                    </div>
                </div><!--end col-->

                <div class="col-12 mt-4 pt-3">
                    <img src="assets/images/job/home.png" class="img-fluid" alt="">
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
    </section><!--end section-->
    <!-- Hero End -->

    <!-- Shape Start -->
    <div class="position-relative">
        <div class="shape overflow-hidden text-color-white">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
            </svg>
        </div>
    </div>
    <!--Shape End-->

    <!-- Start -->
    <section class="section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <div class="section-title mb-4 pb-2">
                        <h4 class="title mb-4">Catégories populaires</h4>
                        <p class="text-muted para-desc mx-auto mb-0">Devenez la meilleure version de <span
                                    class="fw-bold" style="color: #2AABB0;">vous-même</span> grâce à notre coaching en
                            santé mentale : Découvrez nos programmes de coaching personnalisés.</p>
                    </div>
                </div><!--end col-->
            </div><!--end row-->

            <div class="row">
                <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                    <div class="card categories category-primary overflow-hidden rounded shadow border-0">
                        <img src="assets/images/app/img-gestion-stress.jpg" style="height: 180px;" class="img-fluid"
                             alt="">
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-0">
                                <li><a href="javascript:void(0)" class="title h6 text-dark">Gestion du stress</a></li>
                                <li class="h6 mb-0 jobs">23 Coachs</li>
                            </ul>
                        </div>
                    </div>
                </div><!--end col-->

                <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                    <div class="card categories category-primary overflow-hidden rounded shadow border-0">
                        <img src="assets/images/app/img-developpement-personnel.jpg" style="height: 180px;"
                             class="img-fluid" alt="">
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-0">
                                <li><a href="javascript:void(0)" class="title h6 text-dark">Développement personnel</a>
                                </li>
                                <li class="h6 mb-0 jobs">12 Coachs</li>
                            </ul>
                        </div>
                    </div>
                </div><!--end col-->

                <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                    <div class="card categories category-primary overflow-hidden rounded shadow border-0">
                        <img src="assets/images/app/img-depression.jpg" style="height: 180px;" class="img-fluid" alt="">
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-0">
                                <li><a href="javascript:void(0)" class="title h6 text-dark">Gestion de la dépression</a>
                                </li>
                                <li class="h6 mb-0 jobs">6 Coachs</li>
                            </ul>
                        </div>
                    </div>
                </div><!--end col-->

                <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                    <div class="card categories category-primary overflow-hidden rounded shadow border-0">
                        <img src="assets/images/app/anxiete.jpg" style="height: 180px;" class="img-fluid" alt="">
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-0">
                                <li><a href="javascript:void(0)" class="title h6 text-dark">Gestion de l'anxiété</a>
                                </li>
                                <li class="h6 mb-0 jobs">8 Coachs</li>
                            </ul>
                        </div>
                    </div>
                </div><!--end col-->

                <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                    <div class="card categories category-primary overflow-hidden rounded shadow border-0">
                        <img src="assets/images/app/img-relation-interpersonnelle.jpg" style="height: 180px;"
                             class="img-fluid" alt="">
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-0">
                                <li><a href="javascript:void(0)" class="title h6 text-dark">Relations
                                        interpersonnelles</a></li>
                                <li class="h6 mb-0 jobs">15 Coachs</li>
                            </ul>
                        </div>
                    </div>
                </div><!--end col-->

                <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                    <div class="card categories category-primary overflow-hidden rounded shadow border-0">
                        <img src="assets/images/app/traumatisme.jpg" style="height: 180px;" class="img-fluid" alt="">
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-0">
                                <li><a href="javascript:void(0)" class="title h6 text-dark">Gestion des traumatismes</a>
                                </li>
                                <li class="h6 mb-0 jobs">9 Coachs</li>
                            </ul>
                        </div>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->

        <!-- Candidates Start -->
        <div class="container mt-100 mt-60">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <div class="section-title mb-4 pb-2">
                        <h4 class="title mb-4">Nos Experts</h4>
                        <p class="text-muted para-desc mx-auto mb-0">Start working with <span class="fw-bold"
                                                                                              style="color: #2AABB0">Landrick</span>
                            that can provide everything you need to generate awareness, drive traffic, connect.</p>
                    </div>
                </div><!--end col-->
            </div><!--end row-->

            <div class="row">
                {% for coach_ in data.coachs %}
                    <div class="col-lg-3 col-md-6 mt-4 pt-2">
                        <a href="/coach/{{ coach_.id }}">
                            <div class="card team team-primary text-center border-0">
                                <div class="card-body">
                                    <div class="position-relative">
                                        <img src="{{ coach_.profil_image }}"
                                             class="img-fluid avatar avatar-ex-large rounded-circle shadow" alt="">
                                    </div>
                                    <div class="content pt-3 pb-3">
                                        <h5 class="mb-0"><a href="javascript:void(0)" class="name text-dark">{{ coach_.nom|capitalize }} {{ coach_.prenom|capitalize }}</a>
                                        </h5>
                                        <small class="designation text-muted">{{ coach_.coach.specialite|capitalize }}</small>
                                        {# <h6 class="text-muted fw-normal">$ 2300</h6> #}
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div><!--end row-->
        </div><!--end container-->
        <!-- Candidates End -->

        <!-- Testi start -->
        <div class="container mt-100 mt-60">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <div class="section-title mb-4 pb-2">
                        <h4 class="title mb-4">Ce que disent nos clients</h4>
                        <p class="text-muted para-desc mx-auto mb-0">Start working with <span class="fw-bold"
                                                                                              style="color: #2AABB0">Landrick</span>
                            that can provide everything you need to generate awareness, drive traffic, connect.</p>
                    </div>
                </div><!--end col-->
            </div><!--end row-->

            <div class="row">
                <div class="col-12 mt-4 pt-2">
                    <div class="tiny-three-item">
                        {% for avis in data.avis %}
{#                            {{ dump(avis) }}#}
                            <div class="tiny-slide">
                                <div class="card client-testi border-0 text-center">
                                    <div class="card-body">
                                        {% if  avis.seance.client.utilisateur.profil_image|is_valid_url %}
                                            <img src="{{ avis.seance.client.utilisateur.profil_image }}"
                                                 class="img-fluid avatar avatar-small rounded-circle mx-auto shadow" alt="">
                                        {% else %}
                                            <img src="{{ assets_path }}/assets/images/profile/{{ avis.seance.client.utilisateur.profil_image }}"
                                                 class="img-fluid avatar avatar-small rounded-circle mx-auto shadow" alt="">
                                        {% endif %}
                                        <p class="text-muted mt-4">"{{ avis.commentaire }} "</p>
                                        <h6 style="color: #2AABB0;">- {{ avis.seance.client.utilisateur.prenom }}</h6>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
        <div class="container pt-5">
            <div class="row justify-content-center">
                <div class="col-lg-2 col-md-2 col-6 text-center">
                    <img src="assets/images/client/amazon.svg" class="avatar avatar-ex-sm" alt="">
                </div><!--end col-->

                <div class="col-lg-2 col-md-2 col-6 text-center">
                    <img src="assets/images/client/google.svg" class="avatar avatar-ex-sm" alt="">
                </div><!--end col-->

                <div class="col-lg-2 col-md-2 col-6 text-center mt-4 mt-sm-0">
                    <img src="assets/images/client/lenovo.svg" class="avatar avatar-ex-sm" alt="">
                </div><!--end col-->

                <div class="col-lg-2 col-md-2 col-6 text-center mt-4 mt-sm-0">
                    <img src="assets/images/client/paypal.svg" class="avatar avatar-ex-sm" alt="">
                </div><!--end col-->

                <div class="col-lg-2 col-md-2 col-6 text-center mt-4 mt-sm-0">
                    <img src="assets/images/client/shopify.svg" class="avatar avatar-ex-sm" alt="">
                </div><!--end col-->

                <div class="col-lg-2 col-md-2 col-6 text-center mt-4 mt-sm-0">
                    <img src="assets/images/client/spotify.svg" class="avatar avatar-ex-sm" alt="">
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
        <!-- Testi end -->
    </section><!--end section-->
    <!-- End -->

    <!-- Shape Start -->
    <div class="position-relative">
        <div class="shape overflow-hidden text-light">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
            </svg>
        </div>
    </div>
    <!--Shape End-->


    <!-- Cookies Start -->
    <div class="card cookie-popup shadow rounded py-3 px-4">
        <p class="text-muted mb-0">Ce site web utilise des cookies pour vous offrir une expérience utilisateur optimale. En l'utilisant, vous acceptez notre <a href="#" target="_blank" class="text-success h6">utilisation des cookies.</a>
        </p>
        <div class="cookie-popup-actions text-end">
            <button><i class="uil uil-times text-dark fs-4"></i></button>
        </div>
    </div>
    <!--Note: Cookies Js including in plugins.init.js (path like; js/plugins.init.js) and Cookies css including in _helper.scss (path like; scss/_helper.scss)-->
    <!-- Cookies End -->

    <!-- Back to top -->
    <a href="#" onclick="topFunction()" id="back-to-top" class="back-to-top fs-5">
        <i data-feather="arrow-up" class="fea icon-sm icons align-middle" ></i>
    </a>
    <!-- Back to top -->
{% endblock %}