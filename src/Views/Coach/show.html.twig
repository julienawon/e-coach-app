{% extends "./templates/base.html.twig" %}
{% block body %}

    {#    {{ dump(data) }} #}
    <!-- Hero Start -->
    <section class="bg-profile d-table w-100"
             style="background: url('{{ assets_path }}/assets/images/account/bg.png') center center; background-color: #2AABB0 !important;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card public-profile border-0 rounded shadow" style="z-index: 1;">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-lg-2 col-md-3 text-md-start text-center">
                                    <img src="{{ assets_path }}/assets/images/client/05.jpg"
                                         class="avatar avatar-large rounded-circle shadow d-block mx-auto" alt="">
                                </div><!--end col-->

                                <div class="col-lg-10 col-md-9">
                                    <div class="row align-items-end">
                                        <div class="col-md-7 text-md-start text-center mt-4 mt-sm-0">
                                            <h3 class="title mb-0">{{ data.utilisateur.nom }} {{ data.utilisateur.prenom }}</h3>
                                            <small class="text-muted h6 me-2">{{ data.specialite|upper }}</small>
                                        </div><!--end col-->
                                        <div class="col-md-5 text-md-end text-center">
                                            <ul class="list-unstyled social-icon social mb-0 mt-4">
                                                {% if(session['auth']=='client') %}
                                                    <li class="list-inline-item">
                                                        <a href="javascript:void(0)"
                                                           class="rounded"
                                                           data-bs-toggle="tooltip"
                                                           data-bs-placement="bottom"
                                                           title="Messages">
                                                            <i class="uil uil-comment align-middle"></i>
                                                        </a>
                                                    </li>
                                                {% endif %}
                                            </ul><!--end icon-->
                                        </div><!--end col-->
                                    </div><!--end row-->
                                </div><!--end col-->
                            </div><!--end row-->
                        </div>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--ed container-->
    </section><!--end section-->
    <!-- Hero End -->
    <!-- Profile Start -->
    <section class="section mt-60">
        <div class="container mt-lg-3">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">
                    <div class="border-bottom pb-4">
                        <h5>{{ data.utilisateur.nom }} {{ data.utilisateur.prenom }}</h5>
                        <p class="text-muted mb-0">{{ data.description }}</p>
                    </div>

                    <div class="border-bottom pb-4">
                        <div class="row">
                            <div class="col-md-6 mt-4">
                                <h5>Détails personnels :</h5>
                                <div class="mt-4">
                                    <div class="d-flex align-items-center mt-3">
                                        <i data-feather="briefcase" class="fea icon-ex-md text-muted me-3"></i>
                                        <div class="flex-1">
                                            <h6 style="color: #2AABB0" class=" mb-0">Formation :</h6>
                                            <a href="javascript:void(0)" class="text-muted">html</a>, <a
                                                    href="javascript:void(0)" class="text-muted">css</a>, <a
                                                    href="javascript:void(0)" class="text-muted">js</a>, <a
                                                    href="javascript:void(0)" class="text-muted">mysql</a>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center mt-3">
                                        <i data-feather="bookmark" class="fea icon-ex-md text-muted me-3"></i>
                                        <div class="flex-1">
                                            <h6 style="color: #2AABB0" class=" mb-0">Skills :</h6>
                                            <a href="javascript:void(0)" class="text-muted">html</a>, <a
                                                    href="javascript:void(0)" class="text-muted">css</a>, <a
                                                    href="javascript:void(0)" class="text-muted">js</a>, <a
                                                    href="javascript:void(0)" class="text-muted">mysql</a>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center mt-3">
                                        <i data-feather="italic" class="fea icon-ex-md text-muted me-3"></i>
                                        <div class="flex-1">
                                            <h6 style="color: #2AABB0" class=" mb-0">Language :</h6>
                                            <a href="javascript:void(0)" class="text-muted">English</a>, <a
                                                    href="javascript:void(0)" class="text-muted">Japanese</a>, <a
                                                    href="javascript:void(0)" class="text-muted">Chinese</a>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center mt-3">
                                        <i data-feather="map-pin" class="fea icon-ex-md text-muted me-3"></i>
                                        <div class="flex-1">
                                            <h6 style="color: #2AABB0" class=" mb-0">Location :</h6>
                                            <a href="javascript:void(0)" class="text-muted">Beijing, China</a>
                                        </div>
                                    </div>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-6 mt-4 pt-2 pt-sm-0">
                                <h5>Expériences :</h5>

                                <div class="d-flex features feature-primary key-feature align-items-center p-3 rounded shadow mt-4">
                                    <img src="{{ assets_path }}/assets/images/job/Circleci.svg"
                                         class="avatar avatar-ex-sm" alt="">
                                    <div class="flex-1 content ms-3">
                                        <h4 class="title mb-0">Senior Web Developer</h4>
                                        <p class="text-muted mb-0">3 Years Experience</p>
                                        <p class="text-muted mb-0"><a href="javascript:void(0)" class="read-more">CircleCi</a>
                                            @London, UK</p>
                                    </div>
                                </div>

                                <div class="d-flex features feature-primary key-feature align-items-center p-3 rounded shadow mt-4">
                                    <img src="{{ assets_path }}/assets/images/job/Codepen.svg"
                                         class="avatar avatar-ex-sm" alt="">
                                    <div class="flex-1 content ms-3">
                                        <h4 class="title mb-0">Web Designer</h4>
                                        <p class="text-muted mb-0">2 Years Experience</p>
                                        <p class="text-muted mb-0"><a href="javascript:void(0)" class="read-more">Codepen</a>
                                            @Washington D.C, USA</p>
                                    </div>
                                </div>

                                <div class="d-flex features feature-primary key-feature align-items-center p-3 rounded shadow mt-4">
                                    <img src="{{ assets_path }}/assets/images/job/Gitlab.svg"
                                         class="avatar avatar-ex-sm" alt="">
                                    <div class="flex-1 content ms-3">
                                        <h4 class="title mb-0">UI Designer</h4>
                                        <p class="text-muted mb-0">2 Years Experience</p>
                                        <p class="text-muted mb-0"><a href="javascript:void(0)"
                                                                      class="read-more">Gitlab</a> @Perth, Australia</p>
                                    </div>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
    </section><!--end section-->
    <!-- Profile End -->
{% endblock %}