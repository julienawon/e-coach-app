                            </div>
                            <div class="modal-body p-4">
                                <form action="/save-image" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-3">
                                                <label class="form-label">Selectionez une image <span class="text-danger">*</span></label>
                                                <div class="form-icon position-relative">
                                                    <i data-feather="user" class="fea icon-sm icons"></i>
                                                    <input name="photo" id="photo" type="file" class="form-control ps-5" accept="image/*" >
                                                </div>
                                            </div>
                                        </div><!--end col-->
                                    </div><!--end row-->
                                    <div class="border-top p-4">
                                        <button type="submit" class="btn" style="background-color: #2AABB0">Send Now</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
