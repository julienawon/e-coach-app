{% extends "./templates/client.html.twig" %}
{% block secondary %}

    <div class="col-lg-8 col-12">
    <div class="card border-0 rounded shadow">
    <div class="card-body">
    <h5 class="text-md-start text-center">Détails personnels :</h5>

    <div class="mt-3 text-md-start text-center d-sm-flex">
        <img src="{{ assets_path }}/assets/images/client/05.jpg" class="avatar float-md-left avatar-medium rounded-circle shadow me-md-4" alt="">

        <div class="mt-md-4 mt-3 mt-sm-0">
            <a href="javascript:void(0)" class="btn mt-2" style="background-color: #2AABB0; color: #fff">Changer</a>
            <a href="javascript:void(0)" class="btn btn-outline mt-2 ms-2" style="background-color: #2AABB0; color: #fff">Supprimer</a>
        </div>
    </div>

    <form>
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Prénom</label>
                    <div class="form-icon position-relative">
                        <i data-feather="user" class="fea icon-sm icons"></i>
                        <input name="name" id="first" type="text" class="form-control ps-5" placeholder="Prénom :">
                    </div>
                </div>
            </div><!--end col-->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Nom</label>
                    <div class="form-icon position-relative">
                        <i data-feather="user-check" class="fea icon-sm icons"></i>
                        <input name="name" id="last" type="text" class="form-control ps-5" placeholder="Nom :">
                    </div>
                </div>
            </div><!--end col-->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Votre Email</label>
                    <div class="form-icon position-relative">
                        <i data-feather="mail" class="fea icon-sm icons"></i>
                        <input name="email" id="email" type="email" class="form-control ps-5" placeholder="Votre Email :">
                    </div>
                </div>
            </div><!--end col-->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Spécialité</label>
                    <div class="form-icon position-relative">
                        <i data-feather="bookmark" class="fea icon-sm icons"></i>
                        <input name="name" id="occupation" type="text" class="form-control ps-5" placeholder="Spécialité :">
                    </div>
                </div>
            </div><!--end col-->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Tarif Horaire</label>
                    <div class="form-icon position-relative">
                        <i data-feather="dollar-sign" class="fea icon-sm icons"></i>
                        <input name="name" id="occupation" type="text" class="form-control ps-5" placeholder="Tarif Horaire :">
                    </div>
                </div>
            </div><!--end col-->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Experience</label>
                    <div class="form-icon position-relative">
                        <i data-feather="book" class="fea icon-sm icons"></i>
                        <input name="name" id="occupation" type="text" class="form-control ps-5" placeholder="Experience :">
                    </div>
                </div>
            </div><!--end col-->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Disponibilité</label>
                    <div class="form-icon position-relative">
                        <i data-feather="book" class="fea icon-sm icons"></i>
                        <input name="name" id="occupation" type="text" class="form-control ps-5" placeholder="Disponibilité :">
                    </div>
                </div>
            </div><!--end col-->
            <div class="col-lg-12">
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <div class="form-icon position-relative">
                        <i data-feather="message-circle" class="fea icon-sm icons"></i>
                        <textarea name="comments" id="comments" rows="4" class="form-control ps-5" placeholder="Description :"></textarea>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" id="submit" name="send" class="btn" style="background-color: #2AABB0; color: #fff" value="Enregistrer">
            </div><!--end col-->
        </div><!--end row-->
    </form><!--end form-->


    <div class="row">
        <div class="col-md-6 mt-4 pt-2">
            <h5>Coordonnées :</h5>

            <form>
                <div class="row mt-4">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label">Téléphone :</label>
                            <div class="form-icon position-relative">
                                <i data-feather="phone" class="fea icon-sm icons"></i>
                                <input name="number" id="number" type="number" class="form-control ps-5" placeholder="Téléphone :">
                            </div>
                        </div>
                    </div><!--end col-->

                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label">Site web :</label>
                            <div class="form-icon position-relative">
                                <i data-feather="globe" class="fea icon-sm icons"></i>
                                <input name="url" id="url" type="url" class="form-control ps-5" placeholder="Site web :">
                            </div>
                        </div>
                    </div><!--end col-->

                    <div class="col-lg-12 mt-2 mb-0">
                        <button class="btn " style="background-color: #2AABB0; color: #fff">Ajouter</button>
                    </div><!--end col-->
                </div><!--end row-->
            </form>
        </div><!--end col-->

        <div class="col-md-6 mt-4 pt-2">
            <h5>Modifier le mot de passe :</h5>
            <form>
                <div class="row mt-4">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label">Ancien mot de passe :</label>
                            <div class="form-icon position-relative">
                                <i data-feather="key" class="fea icon-sm icons"></i>
                                <input type="password" class="form-control ps-5" placeholder="Ancien mot de passe " required="">
                            </div>
                        </div>
                    </div><!--end col-->

                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label">Nouveau mot de passe :</label>
                            <div class="form-icon position-relative">
                                <i data-feather="key" class="fea icon-sm icons"></i>
                                <input type="password" class="form-control ps-5" placeholder="Nouveau mot de passe :" required="">
                            </div>
                        </div>
                    </div><!--end col-->

                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label">Retapez le nouveau mot de passe :</label>
                            <div class="form-icon position-relative">
                                <i data-feather="key" class="fea icon-sm icons"></i>
                                <input type="password" class="form-control ps-5" placeholder="Retapez le nouveau mot de passe" required="">
                            </div>
                        </div>
                    </div><!--end col-->

                    <div class="col-lg-12 mt-2 mb-0">
                        <button class="btn" style="background-color: #2AABB0; color: #fff">Enregistrer</button>
                    </div><!--end col-->
                </div><!--end row-->
            </form>
        </div><!--end col-->

{% endblock  %}