{% extends './templates/client.html.twig' %}

{% block secondary %}
    <div class="col-lg-8 col-12">
        <div class="rounded shadow p-4">

            {% for coach in data.client.coachs %}
            {# {{dump(coach)}} #}
                <div class="d-flex border-bottom p-3">
                    <a href="/coach/{{ coach.id_utilisateur }}">
                        <div class="d-flex ms-2">
                            <img src="{{ coach.utilisateur.profil_image }}" alt="" class="avatar avatar-md-sm rounded-circle border shadow">
                            <div class="flex-1 ms-3">
                                <h6 class="text-dark">{{ coach.utilisateur.nom }} {{ coach.utilisateur.prenom }}</h6>
                                <p class="text-muted mb-0">{{ coach.specialite|capitalize }}</p>
                                <p class="text-muted mb-0">{{ coach.tarif_horaire}} MAD</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div><!--end col-->
{% endblock %}